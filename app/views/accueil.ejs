<%- include('partials/header') %>

<div class="row">

    <%- include('partials/leftMenu') %>

      
    <div class="col-lg-9">

      <div class="row">
        <% for(const figurine of allFigurines) { %>
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="card h-100">
            <a href="/article/<%= figurine.id %>">
              <img class="card-img-top" src="./images/<%= figurine.name.toLowerCase() %>.png" alt="">
              <div class="badge-category badge badge-pill badge-gentil"><%= figurine.categorie %></div>
            </a>
            <div class="card-body">
              <h4 class="card-title">
                <a href="/article/<%= figurine.id %>"><%= figurine.name %></a>
              </h4>
              <h5>$24.99</h5>
              <p class="card-text"><%= figurine.description %></p>
            </div>
            <div class="card-footer">
              <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
              <a href="/bookmarks/add/<%= figurine.id %>" class="link-add-bookmarks">+ Ajouter aux favoris</a>
            </div>
          </div>
        </div>
        <% } %>

      </div>
      <!-- /.row -->

    </div>
    <!-- /.col-lg-9 -->

  </div>
  <!-- /.row -->

</div>
<!-- /.container -->
<%- include('partials/footer') %>
